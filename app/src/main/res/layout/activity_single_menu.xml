<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:mContext="com.codepath.keeper.activities.SingleMenuActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flProfileSingleMenu">

    </FrameLayout>

    <Button
        android:text="Edit Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onEditProfileClick"
        android:id="@+id/btnEditProfile" />

    <Button
        android:text="Friends swiping for me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSingleSwipingForMeClick"
        android:id="@+id/btnMyMatchmakers" />

    <Button
        android:text="Friends vouching for me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSingleVouchingForMeClick"
        android:id="@+id/btnMyVouches" />

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSingleSettingsClick"
        android:id="@+id/btnSingleSettings" />

    <Button
        android:text="Switch to matchmaker mode"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSwitchToMatchmakerModeClick"
        android:id="@+id/btnSwitchToMatchmakerMode" />

    <com.layer.atlas.AtlasConversationsRecyclerView
        android:id="@+id/conversations_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
