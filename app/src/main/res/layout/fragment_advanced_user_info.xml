<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_advanced_user_info"
    android:layout_height="match_parent"
    tools:mContext=".fragments.AdvancedUserInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <include layout="@layout/height" />

        <include layout="@layout/ethnicity" />

        <include layout="@layout/religion" />

        <TextView
            android:text="@string/ethnicity_and_religion_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAdvancedProfileAdvice" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnUserDone"
        android:text="@string/done" />

</RelativeLayout>
